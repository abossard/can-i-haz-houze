<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["CanIHazHouze.Web.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    
    @* Preload critical resources for better performance *@
    <link rel="preload" href="@Assets["_framework/blazor.web.js"]" as="script" />
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net" />
    
    <HeadOutlet />
</head>

<body>
    <Routes />
    <script src="@Assets["js/preloader.js"]"></script>
    <script src="@Assets["_framework/blazor.web.js"]" autostart="false"></script>
    <script>
        // Configure Blazor to use ONLY Long Polling for maximum corporate proxy compatibility
        // This disables WebSockets entirely and works through any proxy/firewall
        Blazor.start({
            circuit: {
                configureSignalR: function (builder) {
                    builder.withUrl("/_blazor", {
                        transport: 4, // 4 = LongPolling only (no WebSockets)
                        skipNegotiation: false
                    });
                    
                    // Configure automatic reconnection with exponential backoff
                    builder.withAutomaticReconnect([0, 2000, 5000, 10000, 30000]);
                }
            }
        });
    </script>
</body>

</html>
