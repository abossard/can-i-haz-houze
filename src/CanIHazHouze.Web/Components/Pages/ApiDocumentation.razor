    private async Task CopyTextareaToClipboard(string elementId)
    {
        await JSRuntime.InvokeVoidAsync("eval", $@"
            const textarea = document.getElementById('{elementId}');
            if (textarea) {{
                navigator.clipboard.writeText(textarea.value);
            }}
        ");
    }
